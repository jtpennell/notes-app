<%= form_with(model: note, local: true) do |form| %>
  <div class="field mb-4">
    <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :title, rows: 2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
  </div>

  <div class="field mb-4">
    <%= form.label :body, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :body, rows: 10, id: "note_body", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
  </div>

  <div class="preview mb-4">
    <h3 class="text-lg font-bold mb-2">Live Preview</h3>
    <div id="markdown-preview" class="border p-3 rounded bg-gray-100 min-h-[200px] overflow-auto"></div>
  </div>

  <div class="actions">
    <%= form.submit "Save Note", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-500" %>
  </div>
<% end %>
